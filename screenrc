shell -$SHELL
startup_message off
shelltitle ""

multiuser on
acladd pair

autodetach off
defscrollback 10000

hardstatus on
hardstatus alwayslastline

# From web - hostname - screens - date/time
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %Y-%m-%d %{W}%c %{g}]'
