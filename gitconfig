[color]
  status = auto
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  ui = true
  pager = true
[core]
  whitespace = trailing-space,space-before-tab
  editor = vim
[alias]
  tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  tar-gz = !sh -c 'prefix=$(basename $PWD) && ver=$1 && git archive --prefix=\"$prefix-$ver/\" HEAD | gzip > \"$prefix-$ver.tar.gz\"' -
  merged-remotes = "!bash -c 'git branch -r | grep origin | grep -v \"\\->\" | grep -v \"origin/master\" | while read branch; do if [[ \"$(git merge-base origin/master $branch)\" == \"$(git rev-parse $branch)\" ]]; then echo $branch; fi; done' -"
  merged-locals  = "!bash -c 'git branch | cut -c 3- | grep -v \"master\" | while read branch; do if [[ \"$(git merge-base origin/master $branch)\" == \"$(git rev-parse $branch)\" ]]; then echo $branch; fi; done' -"
  stand = log --all --since yesterday --author Doug
  timesheet = !bash -c 'git log --all --reverse --author Doug --after $(date -d \"-1 month\" +%Y-%m-01)'
[core]
  pager = less -FRSX
  excludesfile = /home/douglas/.gitignore
[apply]
  whitespace = fix
[user]
	name = Douglas Meyer
	email = Douglas.Meyer@mail.com
